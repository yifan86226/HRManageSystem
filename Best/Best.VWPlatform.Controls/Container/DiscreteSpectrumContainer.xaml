            <Grid Name="uxYAxisMarkPanel" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding YAxisVisiblity}">
            </Grid>

            <!--  频段扫描频点Mark块绘制区  -->
