<UserControl xmlns:ExportWord="clr-namespace:Best.VWPlatform.Controls.ExportWord"  x:Class="Best.VWPlatform.Controls.ExportWord.ExportReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
        <StackPanel Orientation="Horizontal" Margin="0,-5,0,0">
            <Button x:Name="xBtnExport" FontWeight="Bold" Height="22" Width="80" IsEnabled="{Binding CanExport}" Style="{StaticResource x_DirctionMeasureExport}" HorizontalAlignment="Left" Click="OnBtnExportClick" />
            <Button x:Name="xBtnCheck" FontWeight="Bold" Height="22" Width="80" IsEnabled="{Binding CanCheck}" Style="{StaticResource x_CheckReport}" Click="OnBtnCheckClick" Margin="15,0,0,0"/>
        </StackPanel>
</UserControl>
