<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Best.VWPlatform.Controls.Common">
    <Style TargetType="{x:Type local:CScaleLinePrompt}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CScaleLinePrompt}">
                    <Grid x:Name="x_rangePanel" SnapsToDevicePixels="False" UseLayoutRounding="False">
                        <ContentPresenter x:Name="x_content" Content="{TemplateBinding Content}"/>
                        <Grid x:Name="x_scalePanel"></Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>