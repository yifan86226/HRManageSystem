                                       Foreground="{TemplateBinding Foreground}"
                                       Visibility="{TemplateBinding Header, Converter={StaticResource emptyStringToVisibility}}"
                                       VerticalAlignment="Top"
                                       Margin="0"
                                       Padding="0" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
