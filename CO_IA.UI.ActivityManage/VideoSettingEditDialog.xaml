<Window xmlns:Client="clr-namespace:CO_IA.Client;assembly=CO_IA.Client"
        x:Class="CO_IA.UI.ActivityManage.VideoSettingEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:commonControls="clr-namespace:AT_BC.Common.Controls;assembly=AT_BC.Common"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200"
        Width="450"
        Title="监控设备">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin"
                    Value="5,0" />
            <Setter Property="HorizontalAlignment"
                    Value="Right" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="5,0" />
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="名称/描述" />
        <TextBox Grid.Column="1"
                 x:Name="textBoxName"
                 Grid.ColumnSpan="3"
                 MaxLength="50" />
        <TextBlock Text="所属区域"
                   Grid.Row="1" />
        <ComboBox Grid.Row="1"
                  Grid.ColumnSpan="3"
                  x:Name="comboBoxPlace"
                  Margin="5,0"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Guid"
                  Grid.Column="1"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Stretch">
        </ComboBox>
        <TextBlock Text="IP地址"
                   Grid.Row="2" />
        <TextBox Grid.Column="1"
                 x:Name="textBoxIP"
                 Grid.Row="2"
                 MaxLength="15" />
        <TextBlock Text="端口号"
                   Grid.Row="2"
                   Grid.Column="2" />
        <TextBox Grid.Row="2"
                 Grid.Column="3"
                 x:Name="textBoxPort"
                 MaxLength="5" />
        <TextBlock Text="登录用户"
                   Grid.Row="3" />
        <TextBox Grid.Column="1"
                 x:Name="textBoxUserName"
                 Grid.Row="3"
                 MaxLength="25" />
        <TextBlock Text="登录密码"
                   Grid.Row="3"
                   Grid.Column="2" />
        <PasswordBox Grid.Row="3"
                 Grid.Column="3"
                     x:Name="passwordBox"  VerticalAlignment="Center" Height="22" Margin="5,0"
                 MaxLength="20" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="4"
                    Grid.ColumnSpan="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            <Button Content="确定"
                    Margin="5,0"
                    Click="buttonOk_Click" />
            <Button Content="取消"
                    Margin="5,0"
                    Click="buttonCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
