<Window x:Class="CO_IA.UI.MonitorPlan.MonitorDialog.WorkerSelectedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="工作人员选择窗口" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TreeView x:Name="_treeView" Grid.Row="0" SelectedItemChanged="tv_PersonPlan_SelectedItemChanged"  VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" />
    
        <Button Content="确  定" Grid.Row="1" HorizontalAlignment="Left" Margin="50,0,0,0" Height="20" Width="60" Click="OKButton_Click"/>
        <Button Content="取  消" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,50,0" Height="20" Width="60" Click="CancelButton_Click"/>
    </Grid>
</Window>
