<Window x:Class="CO_IA.UI.MonitorTask.PdfDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="False" BorderThickness="1"
        MaxWidth="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Fill="Black"
                   Opacity="0.6" Grid.RowSpan="2"/>
        <WindowsFormsHost x:Name="winFormHost" Grid.Row="1"
                           VerticalAlignment="Stretch"  HorizontalAlignment="Stretch">

        </WindowsFormsHost>
        <Button Content="X"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" Height="20" Width="20"
                Click="buttonClose_Click" />
    </Grid>
</Window>
