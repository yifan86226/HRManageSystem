<Window x:Class="CO_IA.UI.MonitorTask.XpsDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XpsDocumentWindow"
        Height="800"
        Width="1280"
        ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">
    <Grid Background="Transparent">
        <Rectangle Fill="Black"
                   Opacity="0.6" />
        <DocumentViewer x:Name="documentViewer" Width="1024" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="0,10"/>
        <Button Style="{DynamicResource buttonStyleWindowClose}"
                VerticalAlignment="Top"
                HorizontalAlignment="Right" Click="buttonClose_Click"/>
    </Grid>
</Window>
