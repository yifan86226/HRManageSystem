<Window x:Class="CO_IA.UI.PlanDatabase.Equipments.EquipmentManageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CO_IA.UI.PlanDatabase.Equipments"
        Title="设备管理" Width="850" Height="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:EquipmentEditControl x:Name="equipmentedit" Margin="5,2"/>
        <Border  x:Name="borderPanel" Opacity="0"  Margin="5,2" Grid.Row="0" Background="White" Visibility="Collapsed"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定"  x:Name="btnOk" Click="btnOk_Click" />
            <Button Content="取消"  x:Name="btnCancel" Click="btnCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
