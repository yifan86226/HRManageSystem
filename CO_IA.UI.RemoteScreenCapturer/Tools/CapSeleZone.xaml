<Window x:Class="CO_IA.UI.RemoteScreenCapturer.Tools.CapSeleZone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="550"  WindowStyle="None" MouseDown="Window_MouseDown" AllowsTransparency="True" Topmost="True"
         MinHeight="200" MinWidth="200"
          Background="#00FFFFFF"
        ResizeMode="CanResizeWithGrip" SizeToContent="Manual" MouseMove="Window_MouseMove" Closing="Window_Closing"
        >
    <Grid OpacityMask="{x:Null}" Background="#00000000" ToolTip="点击实现拖拽，右下角按钮实现拉伸，双击完成设置！">
        <Border CornerRadius="0,0,0,0"
                Background="#20ccff99"
                BorderBrush="Gray"
                BorderThickness="1"
                Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="0" Opacity="0.8" />
            </Border.Effect>
        </Border>
    </Grid>
</Window>