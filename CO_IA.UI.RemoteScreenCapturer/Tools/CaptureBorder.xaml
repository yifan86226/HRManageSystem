<Window x:Class="CO_IA.UI.RemoteScreenCapturer.Tools.CaptureBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"  WindowStyle="None" AllowsTransparency="True" Topmost="True"
         MinHeight="200" MinWidth="200"
          Background="#00FFFFFF"
         SizeToContent="Manual" ShowInTaskbar="False" 
        >
    <Grid OpacityMask="{x:Null}" Background="#00000000" >
        <Border CornerRadius="0,0,0,0"                
                BorderBrush="Gold"
                BorderThickness="3"
                Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="0" Opacity="0.8" />
            </Border.Effect>
        </Border>
    </Grid>
</Window>