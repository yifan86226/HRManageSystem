<Window x:Class="CO_IA.UI.Setting.Equipment.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="错误提示" 
        Height="400"
        Width="500" 
        FontSize="15"
        WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="txtError" Margin="2" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button Grid.Row="1" Content="关闭" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Window>
